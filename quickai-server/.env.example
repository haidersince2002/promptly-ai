# Server environment variables (copy to .env and fill in)

# App Port (optional)
PORT=3000

# Database: Neon Postgres connection string
# Example: postgres://<user>:<password>@<host>/<database>?sslmode=require
DATABASE_URL=postgres://user:password@host/dbname?sslmode=require

# Clerk (Backend) - required for @clerk/express
# Get from Clerk dashboard -> API Keys
CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key

# Google Gemini API via OpenAI SDK compatibility endpoint
# Get from Google AI Studio -> API Key
GEMINI_API_KEY=your_gemini_api_key

# ClipDrop API for text-to-image
# Get from https://clipdrop.co/apis
CLIPDROP_API_KEY=your_clipdrop_api_key

# Cloudinary credentials
# Get from Cloudinary Dashboard -> Account Details
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
